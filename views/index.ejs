<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Messages list</h1>
    <ul>
      <% messages.forEach(function(msg) { %>
        <li><%= msg.user %> <%= msg.text %> <%= msg.added %></li>
        <% }); %>
    </ul>
    <a href="/new">add new message</a>
  </body>
</html>
